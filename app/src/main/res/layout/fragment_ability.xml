<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    tools:context=".ui.main.fragments.RaceFragment">

    <Button
        android:id="@+id/btnStrength"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#650A0A" />

    <Button
        android:id="@+id/btnDexterity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        app:backgroundTint="#650A0A" />

    <Button
        android:id="@+id/btnConstitution"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|left"
        app:backgroundTint="#650A0A" />

    <Button
        android:id="@+id/btnIntelligence"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|right"
        app:backgroundTint="#650A0A" />

    <Button
        android:id="@+id/btnWisdom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|left"
        app:backgroundTint="#650A0A" />

    <Button
        android:id="@+id/btnCharisma"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|right"
        app:backgroundTint="#650A0A" />
</FrameLayout>