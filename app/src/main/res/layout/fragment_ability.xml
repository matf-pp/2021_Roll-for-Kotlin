<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    tools:context=".ui.main.fragments.RaceFragment">

    <Button
        android:id="@+id/btnStrength"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:fontFamily="@font/percy_goth"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        app:backgroundTint="#960E0E" />

    <TextView
        android:id="@+id/lbStrenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/percy_goth"
        android:layout_marginLeft="20dp"
        android:text="@string/strenght"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnDexterity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:fontFamily="@font/percy_goth"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        app:backgroundTint="#960E0E" />

    <TextView
        android:id="@+id/lbDexterity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/percy_goth"
        android:layout_marginRight="20dp"
        android:text="@string/dexterity"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnConstitution"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|start"
        android:fontFamily="@font/percy_goth"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        app:backgroundTint="#960E0E" />

    <TextView
        android:id="@+id/lbConstitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/percy_goth"
        android:layout_marginLeft="20dp"
        android:text="@string/constitution"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnIntelligence"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center|end"
        android:fontFamily="@font/percy_goth"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        app:backgroundTint="#960E0E" />

    <TextView
        android:id="@+id/lbInteligence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/percy_goth"
        android:layout_marginRight="20dp"
        android:text="@string/inteligence"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnWisdom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|start"
        android:fontFamily="@font/percy_goth"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"
        app:backgroundTint="#960E0E" />

    <TextView
        android:id="@+id/lbWisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/percy_goth"
        android:layout_marginLeft="20dp"
        android:text="@string/wisdom"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCharisma"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|end"
        android:fontFamily="@font/percy_goth"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="20dp"
        app:backgroundTint="#960E0E" />

    <TextView
        android:id="@+id/lbCharisma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/percy_goth"
        android:layout_marginRight="20dp"
        android:text="@string/charisma"
        android:textSize="20sp" />
</FrameLayout>